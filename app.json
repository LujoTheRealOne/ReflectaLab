{
  "expo": {
    "name": "Reflecta",
    "slug": "reflecta",
    "scheme": "reflecta",
    "version": "0.10.12",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "experiments": {
      "domComponents": true
    },
    "ios": {
      "bundleIdentifier": "so.acta.reflecta",
      "supportsTablet": false,
      "usesAppleSignIn": true,
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "We use the camera to capture images for your journal entries and reflections.",
        "NSMicrophoneUsageDescription": "We use the microphone for real-time voice coaching.",
        "NSFaceIDUsageDescription": "Allow $(PRODUCT_NAME) to access your Face ID biometric data."
      },
      "appleTeamId": "H396GGF5D9"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "so.acta.reflecta",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "image": "./assets/images/splash-icon-light.png",
            "backgroundColor": "#111111"
          },
          "imageWidth": 200
        }
      ],
      [
        "expo-apple-authentication"
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#ffffff"
        }
      ],
      "expo-audio",
      "expo-localization",
      "expo-secure-store",
      "expo-router",
      [
        "expo-local-authentication",
        {
          "fallbackLabel": "Use Passcode"
        }
      ]
    ],
    "owner": "acta",
    "extra": {
      "eas": {
        "projectId": "1c627d58-b438-49dd-a8bd-c4173a5f2ba5"
      }
    }
  }
}
